<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Popipa" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/salmon</item>
        <item name="colorOnPrimary">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/pink</item>
        <item name="colorOnSecondary">@color/purple</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>


    <style name="BotonEstilo" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">40dp</item>
    </style>

    <style name="ViewEstilo" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="BarraDeNavegacion" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/purple</item>
    </style>

    <style name="TextViewEstilo" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="background">@color/salmon</item>
    </style>

    <style name="EditTextEstilo" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/gray2</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Fondo" parent="Widget.AppCompat.ListView">
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="BotonVolver" parent="Widget.AppCompat.Button">
        <item name="background">@color/black</item>
    </style>


</resources>