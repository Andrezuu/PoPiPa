<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregacionRecetas"
    android:background="@color/blue">

    <ImageButton
        android:id="@+id/boton_volver3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="10dp"
        android:background="@drawable/deshacer"
        android:backgroundTint="@color/black"
        android:onClick="onVolverButtonClickedFromAgregarRe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </ImageButton>
    <Button
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:text="@string/finalizar"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:fontFamily="@font/lilita"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/gray">
    </Button>
    <androidx.cardview.widget.CardView
        android:id="@+id/titulo_categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/boton_volver3"
        app:cardCornerRadius="30dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/tituloCategoria"
            android:background="@color/purple"
            android:gravity="center"
            android:textSize="35dp"
            android:padding="15dp"
            android:fontFamily="@font/lilita"
            android:textColor="@color/white">
        </TextView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/titulo_receta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titulo_categoria"
        app:cardCornerRadius="30dp"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/tituloReceta"
            android:background="@color/orange"
            android:gravity="center"
            android:textSize="30dp"
            android:padding="15dp"
            android:fontFamily="@font/lilita"
            android:textColor="@color/white">
        </TextView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/add_ingredientes"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titulo_receta"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="80dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/agregarIngredientes"
            android:background="@color/gray"
            android:gravity="center"
            android:textSize="15dp"
            android:padding="10dp"
            android:fontFamily="@font/lilita"
            android:textColor="@color/black">
        </TextView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/add_pasos"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ingrediente_y_cantidad"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="80dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/agregarPasos"
            android:background="@color/gray"
            android:gravity="center"
            android:textSize="15dp"
            android:padding="10dp"
            android:fontFamily="@font/lilita"
            android:textColor="@color/black">
        </TextView>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/boton_add_ingredientes"
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:text="@string/aumentar"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:fontFamily="@font/lilita"
        app:layout_constraintLeft_toRightOf="@id/add_ingredientes"
        app:layout_constraintTop_toBottomOf="@id/titulo_receta"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:padding="0dp"
        android:backgroundTint="@color/gray"
        android:onClick="onAgregarIngrediente">
    </Button>

    <Button
        android:id="@+id/boton_add_pasos"
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:text="@string/aumentar"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:fontFamily="@font/lilita"
        app:layout_constraintLeft_toRightOf="@id/add_pasos"
        app:layout_constraintTop_toBottomOf="@id/ingrediente_y_cantidad"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:padding="0dp"
        android:backgroundTint="@color/gray"
        android:onClick="iniciarPasoRecetaRecyclerView">
    </Button>
    <androidx.cardview.widget.CardView
        android:id="@+id/ingrediente_y_cantidad"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toBottomOf="@id/boton_add_ingredientes"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/nombreIngrediente"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:hint="@string/nombreIngrediente"
                android:fontFamily="@font/lilita"
                android:textColor="@color/gray2"
                android:gravity="center"
                android:textSize="22dp"
                android:background="@color/gray"
                android:maxLength="30">
            </EditText>
            <EditText
                android:id="@+id/cantidadRequerida"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/cantidadRequerida"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="15dp"
                android:background="@color/gray">
            </EditText>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/probar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/boton_add_pasos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:weightSum="1">

        <androidx.core.widget.NestedScrollView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_paso_creacion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                tools:listitem="@layout/item_creacion_paso">

            </androidx.recyclerview.widget.RecyclerView>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>