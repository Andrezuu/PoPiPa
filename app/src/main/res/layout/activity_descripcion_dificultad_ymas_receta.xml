<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Descripcion_Dificultad__YMas_Receta"
    android:background="@color/blue">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_foto_plato_texto"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/orange">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/fotoPlato"
            android:fontFamily="@font/lilita"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:gravity="center">
        </EditText>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_foto_plato"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view_foto_plato_texto"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/foto_plato"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/boton_volver">
        </ImageButton>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_descripcion_texto"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_view_foto_plato"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/purple"
        app:cardCornerRadius="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/descripcionPlato"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/lilita"
            android:gravity="center">
        </TextView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_descripcion"
        android:layout_width="210dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toBottomOf="@id/card_view_descripcion_texto"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/gray2">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/ingresarDescripcionPlato"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:gravity="top|left"
            android:textSize="15sp"
            android:maxLines="4">
        </EditText>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_dificultad_texto"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_view_descripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="200dp"
        app:cardBackgroundColor="@color/purple"
        app:cardCornerRadius="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/lilita"
            android:text="@string/dificultad"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp">
        </TextView>
    </androidx.cardview.widget.CardView>
    <Spinner
        android:id="@+id/spinnerDificultad"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_view_dificultad_texto"
        app:layout_constraintStart_toStartOf="@id/card_view_dificultad_texto"
        app:layout_constraintEnd_toEndOf="@id/card_view_dificultad_texto"
        android:layout_marginTop="10dp">
    </Spinner>

    <TextView
        android:id="@+id/text_view_selected_spinner"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:fontFamily="@font/lilita"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/spinnerDificultad"
        app:layout_constraintStart_toStartOf="@id/spinnerDificultad"
        app:layout_constraintEnd_toEndOf="@id/spinnerDificultad"
        android:visibility="invisible">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_tiempo_preparacion_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_view_descripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        app:cardBackgroundColor="@color/purple"
        app:cardCornerRadius="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/lilita"
            android:text="@string/tiempoPreparacion"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp">
        </TextView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_view_tiempo_preparacion_text"
        app:layout_constraintLeft_toLeftOf="@id/card_view_tiempo_preparacion_text"
        app:layout_constraintRight_toRightOf="@id/card_view_tiempo_preparacion_text"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/gray2"
        app:cardCornerRadius="30dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/ingreseTiempoPreparacion"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:gravity="top|left"
            android:maxLength="8">
        </EditText>
    </androidx.cardview.widget.CardView>
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="20dp"
        android:text="@string/finalizar"
        android:fontFamily="@font/lilita"
        android:textSize="30sp"
        android:backgroundTint="@color/orange"
        android:onClick="onFinalizarButtonClicked">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>